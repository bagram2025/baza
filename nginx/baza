server {
    listen 8080;
    server_name 81.94.156.217;
    
    root /home/ubuntuuser/baza/www;
    index index.php index.html index.py;

    # Главная страница
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Обработка PHP файлов
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Обработка Python файлов (через CGI)
  #  location ~ \.py$ {
  #      include fastcgi_params;
    #    fastcgi_pass unix:/var/run/fcgiwrap.socket;
   #     fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
   # }



# Обработка Python файлов через CGI
location ~ \.py$ {
    root /home/ubuntuuser/baza/www;
    add_header Content-Type text/plain;
    gzip off;
    include fastcgi_params;
    fastcgi_pass unix:/var/run/fcgiwrap.socket;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    
    # Безопасность - запрещаем доступ к системным файлам
    location ~ /(system|file_list|config)\.py$ {
        deny all;
        return 404;
    }
}
    # Статические файлы
    location /static/ {
        alias /home/ubuntuuser/baza/www/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # FastAPI API
    location /api/ {
        proxy_pass http://127.0.0.1:8001/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
  
#Важно для JSON
        proxy_set_header Accept application/json;
        proxy_hide_header Content-Length;

}

    # REST API
    location /restapi/ {
        proxy_pass http://127.0.0.1:8002;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Flask
    location /flask/ {
        proxy_pass http://127.0.0.1:8003;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Django
    location /django/ {
        proxy_pass http://127.0.0.1:8004;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    server_tokens off;
    access_log /var/log/nginx/baza-access.log;
    error_log /var/log/nginx/baza-error.log;
}
